---
import Social from "../components/Social.astro"
---

<header>
	<a href="/">
		<img src="/static/images/logo.png" alt="Gaming Blog Logo" id="logo" />
	</a>

	<nav>
		<ul>
			<li><a href="/">Home</a></li>
			<li><a href="/game-review-list">Game Review List</a></li>
			<li><a href="/game-news-list">Gaming News</a></li>
		</ul>
	</nav>

	<Social />
	
</header>

<style>
	@import "../../static/css/styles.css";

	

	nav ul {
		list-style: none;
		padding: 0;
		display: flex;
		justify-content: center;
	}

	nav li {
		margin: 0 1rem;
	}

	nav a {
		text-decoration: none;
		color: #fff;
		font-weight: bold;
	}

	img#logo {
		transition: transform 0.3s ease;
		max-height: 50px;
		margin-right: 10px; 
		border: none;
	}

	
	#logo:hover {
		transform: scale(1.1);
		filter: drop-shadow(0 0 10px rgba(3, 255, 129, 0.952));
	}
</style>
